{% if pagination.pages > 0 %}
 <nav role="navigation" class="flex justify-center my-8" >
    {% if pagination.previous %}
        <a href="{{ pagination.previous.url }}" class="flex items-center justify-center px-3 h-8 text-sm font-medium text-white-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" aria-label="Previous">
            {{ pagination.previous.title }}
        </a>
    {% endif %}
   
    {% if pagination.next %}
        <a href="{{ pagination.next.url }}" class="flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" aria-label="Previous">
            {{ pagination.next.title }}
        </a>
    {% endif %}
  

 </nav>
{% endif %}