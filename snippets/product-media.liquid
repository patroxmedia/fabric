{% case media.media_type %}
  {% when 'image' %}
    <img src="{{ media| img_url:'large' }}" alt="{{ media.preview_image.alt}}" class="w-full h-full object-cover " loading="lazy" />
    
  {% when 'external-video' %}
    {{ media| external_video_tag:  class: 'w-full h-80 object-cover' }}

{% when 'video' %}
    {{ media| video_tag:controls:true,  class: 'w-full h-full object-cover' }}

{% when 'model' %}
    
    <product-model>
      <div>
        <button class="w-full h-full bg-gray-100 border relative ">
          <img src="{{ media | img_url:'large' }}" 
            alt="{{media.preview.image.alt}}"
            class="w-full h-full object-cover"
          
          >
        </button>
      </div>
    </product-model>
  {% else %}

    {{ media| media_tag }}
  
   
{% endcase %}