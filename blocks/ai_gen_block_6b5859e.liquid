{% endstyle %}

<influencer-carousel-{{ ai_gen_id }} class="ai-influencer-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% assign has_slides = false %}
  {% for i in (1..5) %}
    {% assign video_key = 'video_' | append: i %}
    {% assign product_key = 'product_' | append: i %}
    {% if block.settings[video_key] != blank %}
      {% assign has_slides = true %}
      {% break %}
    {% endif %}
  {% endfor %}

  {% if has_slides %}
    <div class="ai-influencer-carousel__wrapper-{{ ai_gen_id }}">
      <div class="ai-influencer-carousel__track-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% assign video_key = 'video_' | append: i %}
          {% assign product_key = 'product_' | append: i %}
          {% assign video_url = block.settings[video_key] %}
          {% assign product = block.settings[product_key] %}

          {% if video_url != blank %}
            <div class="ai-influencer-carousel__slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
              <video
                class="ai-influencer-carousel__video-{{ ai_gen_id }}"
                src="{{ video_url }}"
                autoplay
                loop
                muted
                playsinline
              ></video>

              <div class="ai-influencer-carousel__overlay-{{ ai_gen_id }}">
                <div class="ai-influencer-carousel__buttons-{{ ai_gen_id }}">
                  {% if product != blank %}
                    <button
                      class="ai-influencer-carousel__button-{{ ai_gen_id }} ai-influencer-carousel__button--primary-{{ ai_gen_id }}"
                      data-product-id="{{ product.id }}"
                      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                    >
                      {{ block.settings.add_to_cart_text }}
                    </button>
                    <a
                      href="{{ product.url }}"
                      class="ai-influencer-carousel__button-{{ ai_gen_id }} ai-influencer-carousel__button--secondary-{{ ai_gen_id }}"
                    >
                      {{ block.settings.view_details_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <button
        class="ai-influencer-carousel__nav-{{ ai_gen_id }} ai-influencer-carousel__nav--prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <button
        class="ai-influencer-carousel__nav-{{ ai_gen_id }} ai-influencer-carousel__nav--next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>

      <div class="ai-influencer-carousel__dots-{{ ai_gen_id }}"></div>
    </div>
  {% else %}
    <div class="ai-influencer-carousel__empty-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-influencer-carousel__empty-message-{{ ai_gen_id }}">
        Next, add videos and products to your carousel
      </div>
    </div>
  {% endif %}
</influencer-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class InfluencerCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-influencer-carousel__track-{{ ai_gen_id }}');
        this.slides = Array.from(this.querySelectorAll('.ai-influencer-carousel__slide-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-influencer-carousel__nav--prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-influencer-carousel__nav--next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-influencer-carousel__dots-{{ ai_gen_id }}');
        this.videos = Array.from(this.querySelectorAll('.ai-influencer-carousel__video-{{ ai_gen_id }}'));

        if (this.slides.length === 0) return;

        this.createDots();
        this.setupEventListeners();
        this.updateSlide();
        this.startAutoplay();
      }

      createDots() {
        this.slides.forEach((slide, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-influencer-carousel__dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        const addToCartButtons = this.querySelectorAll('.ai-influencer-carousel__button--primary-{{ ai_gen_id }}');
        addToCartButtons.forEach(button => {
          button.addEventListener('click', (e) => this.handleAddToCart(e));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => this.startAutoplay());
      }

      updateSlide() {
        this.track.style.transform = `translateX(-${this.currentSlide * 100}%)`;

        const dots = this.dotsContainer.querySelectorAll('.ai-influencer-carousel__dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });

        this.videos.forEach((video, index) => {
          if (index === this.currentSlide) {
            video.play();
          } else {
            video.pause();
          }
        });
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlide();
      }

      prevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.updateSlide();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlide();
      }

      startAutoplay() {
        if (this.autoplayInterval) return;
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_duration }} * 1000);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      handleAddToCart(e) {
        const button = e.currentTarget;
        const variantId = button.dataset.variantId;

        if (!variantId) return;

        const formData = {
          items: [{
            id: variantId,
            quantity: 1
          }]
        };

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
          window.dispatchEvent(new Event('cart:updated'));
          button.textContent = '{{ block.settings.added_to_cart_text }}';
          setTimeout(() => {
            button.textContent = '{{ block.settings.add_to_cart_text }}';
          }, 2000);
        })
        .catch(error => {
          console.error('Error adding to cart:', error);
        });
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('influencer-carousel-{{ ai_gen_id }}', InfluencerCarousel{{ ai_gen_id }});
  })();
</script>

