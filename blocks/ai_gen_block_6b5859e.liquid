{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-influencer-carousel-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-influencer-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.carousel_height }}px;
  }

  .ai-influencer-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-influencer-carousel__slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    height: 100%;
  }

  .ai-influencer-carousel__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-influencer-carousel__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity }}), transparent);
    padding: 40px 20px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .ai-influencer-carousel__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-influencer-carousel__button-{{ ai_gen_id }} {
    padding: 14px 28px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .ai-influencer-carousel__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
  }

  .ai-influencer-carousel__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-influencer-carousel__button--secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_color }};
    color: {{ block.settings.secondary_button_text_color }};
  }

  .ai-influencer-carousel__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-influencer-carousel__nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: all 0.3s ease;
  }

  .ai-influencer-carousel__nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-influencer-carousel__nav--prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-influencer-carousel__nav--next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-influencer-carousel__dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 80px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
  }

  .ai-influencer-carousel__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-influencer-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    width: 24px;
    border-radius: 5px;
  }

  .ai-influencer-carousel__empty-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.carousel_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
