<div class="max-w-md">
    <div class="text-5xl font-bold m-4"> {{ section.settings.title }}</div>
    <div class="my-4">

        <p class="text-base md:text-xl  leading-normal"> {{ section.settings.subtext_title }}</p>
    </div>
    
    <div class="my-4">
        {% if section.settings.button_url == blank %}
         {% assign shop_url=shop.secure_url  %}
         {% else % %}
            {% assign shop_url = section.settings.button_url  %}
        {% endif %}
    <a href="{{ shop_url }}" class="px-4 inline py-2 text-base  font-medium  shadow bg-green-600 hover:bg-green-700 text-white"> {{ section.settings.button_label }}</a>
    </div>
</div>




{% schema %}

{
"name": "Template 404",
"tag": "section",
"class": "flex items-centre justify-center text-center py-7 h-screen",
"settings": [

    {
    "type": "text",
    "id": "title",
    "default":"404",
    "label": "404 heading title"
    
    },
    {
    "type": "text",
    "id": "subtext_title",
    "default":"the page you are looking for not found",
    "label": "404 subtext title"
    },
    
    {
    "type": "text",
    "id": "button_label",
    "default":"Go back Homepage",
    "label": "Button label"
    },
    {
    "type": "url",
    "id": "button_url",
    "label": "Button url"


    }
]


}


{% endschema %}