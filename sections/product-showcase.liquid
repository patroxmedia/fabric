{{ 'section-product-showcase.css' | asset_url | stylesheet_tag }}

<div class="product-showcase" id="ProductShowcase-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="section-header text-center">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="product-grid product-grid--{{ section.settings.columns_desktop }}-col">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            {% assign product = all_products[block.settings.product] %}
            {% if product != blank %}
              <div class="product-card" {{ block.shopify_attributes }}>
                <div class="product-card__image">
                  {% if product.featured_media %}
                    <a href="{{ product.url }}" class="product-card__image-wrapper">
                      {{ product.featured_media | image_url: width: 400 | image_tag: 
                         loading: 'lazy',
                         alt: product.featured_media.alt | default: product.title,
                         class: 'product-card__image-main'
                      }}
                      {% if product.media[1] %}
                        {{ product.media[1] | image_url: width: 400 | image_tag: 
                           loading: 'lazy',
                           alt: product.media[1].alt | default: product.title,
                           class: 'product-card__image-hover'
                        }}
                      {% endif %}
                    </a>
                  {% else %}
                    <div class="product-card__image-placeholder">
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}
                  
                  {% if product.compare_at_price > product.price %}
                    <div class="product-card__badge">
                      <span class="badge badge--sale">
                        Sale
                      </span>
                    </div>
                  {% endif %}
                </div>

                <div class="product-card__info">
                  <h3 class="product-card__title">
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  </h3>
                  
                  <div class="product-card__price">
                    {% if product.compare_at_price > product.price %}
                      <span class="price price--on-sale">
                        <span class="price__current">{{ product.price | money }}</span>
                        <span class="price__compare">{{ product.compare_at_price | money }}</span>
                      </span>
                    {% else %}
                      <span class="price">
                        <span class="price__current">{{ product.price | money }}</span>
                      </span>
                    {% endif %}
                  </div>

                  {% if block.settings.show_description and product.description != blank %}
                    <div class="product-card__description">
                      {{ product.description | strip_html | truncate: 100 }}
                    </div>
                  {% endif %}

                  {% if block.settings.show_quick_add %}
                    <div class="product-card__actions">
                      {% if product.available %}
                        {% if product.variants.size == 1 %}
                          <button type="button" 
                                  class="btn btn--primary btn--full-width quick-add-btn"
                                  data-product-id="{{ product.id }}"
                                  data-variant-id="{{ product.selected_or_first_available_variant.id }}">
                            Add to Cart
                          </button>
                        {% else %}
                          <a href="{{ product.url }}" class="btn btn--primary btn--full-width">
                            Choose Options
                          </a>
                        {% endif %}
                      {% else %}
                        <button type="button" class="btn btn--secondary btn--full-width" disabled>
                          Sold Out
                        </button>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}

          {% when 'collection' %}
            {% assign collection = collections[block.settings.collection] %}
            {% if collection != blank %}
              <div class="collection-card" {{ block.shopify_attributes }}>
                <div class="collection-card__image">
                  <a href="{{ collection.url }}" class="collection-card__image-wrapper">
                    {% if collection.featured_image %}
                      {{ collection.featured_image | image_url: width: 400 | image_tag: 
                         loading: 'lazy',
                         alt: collection.title,
                         class: 'collection-card__image-main'
                      }}
                    {% else %}
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </a>
                </div>
                <div class="collection-card__info">
                  <h3 class="collection-card__title">
                    <a href="{{ collection.url }}">{{ collection.title }}</a>
                  </h3>
                  {% if block.settings.show_product_count %}
                    <p class="collection-card__count">
                      {{ collection.products_count }} 
                      {% if collection.products_count == 1 %}item{% else %}items{% endif %}
                    </p>
                  {% endif %}
                </div>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.view_all_url != blank %}
      <div class="section-footer text-center">
        <a href="{{ section.settings.view_all_url }}" class="btn btn--secondary">
          {{ section.settings.view_all_text | default: 'View All' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Quick add functionality
  const quickAddBtns = document.querySelectorAll('.quick-add-btn');
  
  quickAddBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const variantId = this.dataset.variantId;
      const originalText = this.textContent;
      
      this.textContent = 'Adding...';
      this.disabled = true;
      
      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          items: [{
            id: variantId,
            quantity: 1
          }]
        })
      })
      .then(response => response.json())
      .then(data => {
        this.textContent = 'Added!';
        setTimeout(() => {
          this.textContent = originalText;
          this.disabled = false;
        }, 2000);
        
        // Trigger cart drawer or redirect
        if (window.theme && window.theme.cartDrawer) {
          window.theme.cartDrawer.open();
        }
      })
      .catch(error => {
        console.error('Error:', error);
        this.textContent = 'Error';
        setTimeout(() => {
          this.textContent = originalText;
          this.disabled = false;
        }, 2000);
      });
    });
  });
});
</script>

<style>
.product-showcase {
  padding: 60px 0;
}

.section-header {
  margin-bottom: 50px;
}

.section-heading {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  font-weight: 600;
}

.section-subheading {
  font-size: 1.1rem;
  color: rgba(var(--color-foreground), 0.7);
  max-width: 600px;
  margin: 0 auto;
}

.product-grid {
  display: grid;
  gap: 30px;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.product-grid--2-col {
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
}

.product-grid--3-col {
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
}

.product-grid--4-col {
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

.product-card, .collection-card {
  background: rgb(var(--color-background));
  border-radius: 12px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid rgba(var(--color-border), 0.08);
}

.product-card:hover, .collection-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}

.product-card__image, .collection-card__image {
  position: relative;
  overflow: hidden;
  aspect-ratio: 1;
}

.product-card__image-wrapper, .collection-card__image-wrapper {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
}

.product-card__image-main, .collection-card__image-main {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.3s ease;
}

.product-card__image-hover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product-card__image-wrapper:hover .product-card__image-hover {
  opacity: 1;
}

.product-card__badge {
  position: absolute;
  top: 15px;
  left: 15px;
  z-index: 2;
}

.badge {
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.badge--sale {
  background: rgb(var(--color-accent));
  color: rgb(var(--color-background));
}

.product-card__info, .collection-card__info {
  padding: 20px;
}

.product-card__title, .collection-card__title {
  margin: 0 0 10px;
  font-size: 1.1rem;
  font-weight: 500;
}

.product-card__title a, .collection-card__title a {
  color: rgb(var(--color-foreground));
  text-decoration: none;
  transition: color 0.3s ease;
}

.product-card__title a:hover, .collection-card__title a:hover {
  color: rgb(var(--color-accent));
}

.product-card__price {
  margin-bottom: 15px;
  font-weight: 600;
}

.price__current {
  color: rgb(var(--color-foreground));
}

.price--on-sale .price__current {
  color: rgb(var(--color-accent));
}

.price__compare {
  color: rgba(var(--color-foreground), 0.5);
  text-decoration: line-through;
  margin-left: 8px;
  font-size: 0.9em;
}

.product-card__description {
  color: rgba(var(--color-foreground), 0.7);
  font-size: 0.9rem;
  line-height: 1.5;
  margin-bottom: 20px;
}

.product-card__actions {
  margin-top: 20px;
}

.btn {
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  font-weight: 500;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
}

.btn--full-width {
  width: 100%;
}

.btn--primary {
  background: rgb(var(--color-accent));
  color: rgb(var(--color-background));
}

.btn--primary:hover {
  background: rgba(var(--color-accent), 0.8);
}

.btn--secondary {
  background: transparent;
  color: rgb(var(--color-foreground));
  border: 1px solid rgba(var(--color-border), 0.2);
}

.btn--secondary:hover {
  background: rgba(var(--color-foreground), 0.05);
}

.section-footer {
  margin-top: 50px;
}

.collection-card__count {
  color: rgba(var(--color-foreground), 0.6);
  font-size: 0.9rem;
  margin: 0;
}

@media screen and (max-width: 749px) {
  .product-showcase {
    padding: 40px 0;
  }
  
  .section-heading {
    font-size: 2rem;
  }
  
  .product-grid {
    gap: 20px;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
  
  .product-grid--2-col,
  .product-grid--3-col,
  .product-grid--4-col {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}
</style>

{% schema %}
{
  "name": "Product Showcase",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular products"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "View all URL"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View All Products"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "show_description",
          "label": "Show product description",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_quick_add",
          "label": "Show quick add button",
          "default": true
        }
      ]
    },
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "checkbox",
          "id": "show_product_count",
          "label": "Show product count",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Showcase",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}