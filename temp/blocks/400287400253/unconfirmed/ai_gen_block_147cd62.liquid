{% doc %}
  @prompt
    Create a carousel block that displays items in a 4-column grid layout. The carousel should show 4 items per slide in a grid format, with navigation arrows to slide between sets of items. Include autoplay functionality, adjustable slide duration, and smooth transitions between slides. The grid should be responsive and stack on mobile devices.
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-grid-carousel-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    max-width: 100%;
    padding: 40px 0;
  }

  .ai-grid-carousel__container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .ai-grid-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-grid-carousel__slide-{{ ai_gen_id }} {
    min-width: 100%;
    flex-shrink: 0;
  }

  .ai-grid-carousel__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    padding: 0 20px;
  }

  .ai-grid-carousel__item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .ai-grid-carousel__item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-grid-carousel__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 15px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-grid-carousel__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-grid-carousel__image-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 200px;
    background-color: #f4f4f4;
  }

  .ai-grid-carousel__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-grid-carousel__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-grid-carousel__nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background-color 0.3s ease;
  }

  .ai-grid-carousel__nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-grid-carousel__nav-{{ ai_gen_id }}--prev {
    left: 10px;
  }

  .ai-grid-carousel__nav-{{ ai_gen_id }}--next {
    right: 10px;
  }

  .ai-grid-carousel__nav-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-grid-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 30px;
  }

  .ai-grid-carousel__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-grid-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-grid-carousel__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-grid-carousel__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-grid-carousel__nav-{{ ai_gen_id }} {
      width: {{ block.settings.nav_button_size | times: 0.8 }}px;
      height: {{ block.settings.nav_button_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<grid-carousel-{{ ai_gen_id }}
  class="ai-grid-carousel-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.enable_autoplay }}"
  data-duration="{{ block.settings.autoplay_duration }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-grid-carousel__container-{{ ai_gen_id }}">
    <div class="ai-grid-carousel__track-{{ ai_gen_id }}">
      {% assign items_per_slide = 4 %}
      {% assign total_items = 12 %}
      {% assign total_slides = total_items | divided_by: items_per_slide %}

      {% for slide_index in (0..total_slides) %}
        {% assign slide_num = slide_index | plus: 1 %}
        {% if slide_num <= total_slides %}
          <div class="ai-grid-carousel__slide-{{ ai_gen_id }}">
            <div class="ai-grid-carousel__grid-{{ ai_gen_id }}">
              {% for i in (1..items_per_slide) %}
                {% assign item_index = slide_index | times: items_per_slide | plus: i %}
                {% assign image_key = 'item_' | append: item_index | append: '_image' %}
                {% assign title_key = 'item_' | append: item_index | append: '_title' %}
                {% assign description_key = 'item_' | append: item_index | append: '_description' %}

                <div class="ai-grid-carousel__item-{{ ai_gen_id }}">
                  <div class="ai-grid-carousel__image-wrapper-{{ ai_gen_id }}">
                    {% if block.settings[image_key] %}
                      <img
                        src="{{ block.settings[image_key] | image_url: width: 600 }}"
                        alt="{{ block.settings[title_key] | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag }}
                    {% endif %}
                  </div>
                  {% if block.settings[title_key] != blank %}
                    <h3 class="ai-grid-carousel__title-{{ ai_gen_id }}">
                      {{ block.settings[title_key] }}
                    </h3>
                  {% endif %}
                  {% if block.settings[description_key] != blank %}
                    <p class="ai-grid-carousel__description-{{ ai_gen_id }}">
                      {{ block.settings[description_key] }}
                    </p>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <button
      class="ai-grid-carousel__nav-{{ ai_gen_id }} ai-grid-carousel__nav-{{ ai_gen_id }}--prev"
      aria-label="Previous slide"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>

    <button
      class="ai-grid-carousel__nav-{{ ai_gen_id }} ai-grid-carousel__nav-{{ ai_gen_id }}--next"
      aria-label="Next slide"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>

  <div class="ai-grid-carousel__dots-{{ ai_gen_id }}">
    {% for i in (1..total_slides) %}
      <button
        class="ai-grid-carousel__dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
        aria-label="Go to slide {{ i }}"
        data-slide="{{ i | minus: 1 }}"
      ></button>
    {% endfor %}
  </div>
</grid-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class GridCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-grid-carousel__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-grid-carousel__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-grid-carousel__nav-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-grid-carousel__nav-{{ ai_gen_id }}--next');
        this.dots = this.querySelectorAll('.ai-grid-carousel__dot-{{ ai_gen_id }}');
        this.totalSlides = this.slides.length;

        this.autoplay = this.dataset.autoplay === 'true';
        this.duration = parseInt(this.dataset.duration) * 1000;

        this.setupEventListeners();

        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => {
          this.goToPrevSlide();
          this.resetAutoplay();
        });

        this.nextButton.addEventListener('click', () => {
          this.goToNextSlide();
          this.resetAutoplay();
        });

        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.target.dataset.slide);
            this.goToSlide(slideIndex);
            this.resetAutoplay();
          });
        });

        this.addEventListener('mouseenter', () => {
          if (this.autoplay) {
            this.stopAutoplay();
          }
        });

        this.addEventListener('mouseleave', () => {
          if (this.autoplay) {
            this.startAutoplay();
          }
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        const offset = -100 * this.currentSlide;
        this.track.style.transform = `translateX(${offset}%)`;
        this.updateDots();
      }

      goToNextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.goToSlide(this.currentSlide);
      }

      goToPrevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.goToSlide(this.currentSlide);
      }

      updateDots() {
        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, this.duration);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        if (this.autoplay) {
          this.stopAutoplay();
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('grid-carousel-{{ ai_gen_id }}', GridCarousel{{ ai_gen_id }});
  })();
</script>

